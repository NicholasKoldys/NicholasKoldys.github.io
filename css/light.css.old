/**-----------------------------------
/**----------Global Footer
/**-------------------------------------*/

footer {
    grid-area: ft;
    /* display: flex;
    flex-direction: row; */
}

footer > nav > ul {
    list-style-type: none;
}

footer > .footer-section {
    /* background-color: darkseagreen; */
    margin: .5rem;
}


/**-----------------------------------
/**-----------Site Elements
/**-------------------------------------*/

main {
    grid-area: mn;
    display: grid;
    row-gap: 10vh; /* * NOTE * Change with aside-nav row-gap */
    grid-template-areas:
    "sNav s1 aScroll"
    "sNav s2 aScroll"
    "sNav s3 aScroll"
    "sNav s4 aScroll";
    grid-template-columns: auto 1fr auto;
    /* grid-template-rows: repeat(4, minmax(70vh, auto)); */
    grid-template-rows: repeat(4, auto);
}
/*
--
--
--
*/
aside#aside-nav {
    grid-area: sNav;
    z-index: 10;
    display: grid;
    row-gap: 10vh; /* * Make sure it matches main's row-gap */
    grid-template-areas:
    "sNav1"
    "sNav2"
    "sNav3"
    "sNav4";
    grid-template-columns: 3vw;
    grid-template-rows:  repeat(4, auto);
    padding-left: clamp(1ch, 1vw, 3ch);
}

/** SEGMENTS */

aside#aside-nav > div.color-timeline-segment {
    /* margin-left: 1vw; */
    height: 0; /* * Set with JS */
    background-color: var(--primary-dark);
    transition: height .1s linear, opacity .5s linear;
}
aside#aside-nav > div.section-1 {
    grid-area: sNav1;
    background-color: darkred;
    text-decoration-color: darkred;
}
aside#aside-nav > div.section-2 {
    grid-area: sNav2;
    background-color: darkgreen;
    text-decoration-color: darkgreen;
}
aside#aside-nav > div.section-3 {
    grid-area: sNav3;
    background-color: darkblue;
    text-decoration-color: darkblue;
}
aside#aside-nav > div.section-4 {
    grid-area: sNav4;
    background-color: darkorange;
    text-decoration-color: darkorange;
}

/** TITLES */

aside#aside-nav > div.color-timeline-segment > span.section-title {
    z-index: 20;
    position: absolute;
    padding: 2ch;
    transition: color 1s linear, opacity .2s linear;
}
span.section-title > a {
    font-family: var(--heading-family);
    text-decoration-line: underline;
    text-decoration-thickness: .5ex;
    font-size: x-large;
    font-weight: 900;
    color: inherit;
}
span.section-title > a:visited {
    color: var(--text-primary);
}
span.section-title > a:hover {
    color: var(--text-primary);
}


