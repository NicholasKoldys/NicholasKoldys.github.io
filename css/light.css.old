/** CONTENT SECTION */

section {
    /* background-color: var(--primary-dark); */
    background-color:rgba(0, 0, 0, 0.82);
    opacity: 1;
    transition: background-color 1s linear, opacity 1s linear;
    padding: var(--extra-pad);
}
/*
--
--
--
*/
section#section-1 {
    grid-area: s1;
    display: flex;
}

section#section-1 > #intro-article {
    /* background-color: brown; */
    padding: var(--extra-pad);
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: left;
    justify-content: center;
}

section#section-1 > #eye-candy-1 {
    /* background-color: chocolate; */
    flex-grow: 1;
    display: flex;
    justify-content: center;
}

/* #eye-candy-1 > img {
    border-radius: 50%;
} */
/*
--
--
--
*/
section#section-2 {
    grid-area: s2;
    display: grid;
    column-gap: var(--standard-pad);
    row-gap: var(--standard-pad);
    grid-template-areas:
    "p1 p2"
    "p3 p3"
    "p4 p5";
    grid-template-columns: repeat(2, 1fr);
    /* TODO MAX was clamp( 30ex, 10vh, 100ex) */
    /* grid-template-rows: repeat(3, minmax(25%, auto ) ); */
    grid-template-rows: repeat(3, auto);
}

section#section-2 > article {
    display: flex;
    flex-direction: column;
    justify-content: center;

    /* TODO Remove or MAKE BETTER */
    border: 0.3rem solid black;
}

section#section-2 > article > img {
    height: clamp(50%, 10vh, 100%);
    width: clamp(50%, 10vw, 100%);
    /* height: clamp(20ch, 15vh, 30ch); */
    /* justify-content: center; */
    flex-grow: 1;
    /* object-position: top; */
}

section#section-2 > article > div.project-desc {
    /* flex-grow: 2; */
    /* width: clamp(20ch, 50vw, 50ch); */
    padding: var(--standard-pad);
}

/* section#section-2 > article > div.project-desc > p {
    height: clamp( 10ch, 10vh, 20ch );
    overflow: auto;
} */
/* section#section-2 > article#project-3-lrg >  */
div.project-desc > p {
    height: clamp( 10ex, 20vh, 50ex );
    overflow: auto;
}

section#section-2 > article#project-1-sm {
    grid-area: p1;
}

section#section-2 > article#project-2-sm {
    grid-area: p2;
}

section#section-2 > article#project-3-lrg {
    grid-area: p3;
    /* display: flex; */
}
section#section-2 > article#project-3-lrg > img#image-main  {
    height: clamp( 30ex, 55vh, 60ex );
}
section#section-2 > article#project-3-lrg > div.project-desc > div.image-selection {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

section#section-2 > article#project-4-sm {
    grid-area: p4;
}

section#section-2 > article#project-5-sm {
    grid-area: p5;
}

section#section-2 > article#project-dyn {
    display: none;
    flex-direction: row;
    width: 100%;
    /* height: 100%; */
}

section#section-2 > article#project-dyn > button {
    border: none;
    cursor: pointer;
    /* background: url(../../common/image/bars.svg) center no-repeat;
    background-size: contain; */
    width: clamp(10ch, 7vw, 12ch);
    background-color: var(--tertiary-dark);
}
section#section-2 > article#project-dyn > button:hover {
    background-color: var(--react-dark);
}

section#section-2 > article#project-dyn > div#project-viewer {
    /* flex-grow: 1; */
    display: flex;
    flex-direction: column;
    /* justify-content: space-between; */
    width: clamp(70ch, 100%, 120ch);
    padding: clamp(3ch, 2%, 5ch);
}

section#section-2 > article#project-dyn > div#project-viewer > div#project-images {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100%;
}
section#section-2 > article#project-dyn > div#project-viewer > div#project-images > div#image-stack-1 {
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
section#section-2 > article#project-dyn > div#project-viewer > div#project-images > div#project-main-image-holder {
    display: flex;
    flex-direction: row;
    overflow: auto;
    width: 60vw;
    height: auto;
    touch-action: pan-x;
}
section#section-2 > article#project-dyn > div#project-viewer > div#project-images > div#project-main-image-holder > img {
    height: clamp(20ex, 48vh, 60ex);
    width: clamp(20ch, 35vw, 60ch);
}
section#section-2 > article#project-dyn > div#project-viewer > div#project-images > div#image-stack-2 {
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
