/**-----------------------------------
/**----------Global Header
/**-------------------------------------*/

header { 
    grid-area: hd;
    top: 0;
    z-index: 100;
    display: flex;
    flex-direction: row;
    background-color: var(--secondary-dark);
    /* width: 100%; */
    /* height: auto; */
    height: clamp(4ch, 5vh, 8ch);
}
header > a#home-link {
    display: block;
    /* background: url(../../common/image/cybernewty-avatar.jpg) no-repeat;
    background-size: contain; */
    width: clamp(5ch, 4vw, 10ch);
    margin-left: 1ch;
}
header > a#home-link > img {
    padding: 0;
    height: 100%;
    width: 100%;
}
header > nav > ul {
    list-style-type: none;
    margin: 0;
}

nav.crumbs {
    flex-grow: 1;
    display: flex;
    justify-content: left;
    align-items: center;
}
nav.crumbs > ul#crumb-list { 
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
nav.crumbs > ul#crumb-list > li {
    display: flex;
}
nav.crumbs > ul#crumb-list > li > a {
    display: block;
    font-family: inherit;
    font-style: inherit;
    font-size: 100%;
    text-decoration: none;
    font-weight: 900;
    color: inherit;
    width: 100%;
    padding: 1ch 2ch;
    transition: all .2s linear;
}
nav.crumbs > ul#crumb-list > li > a::after {
    content: " / ";
}
nav.crumbs > ul#crumb-list > li > a:hover {
    color: white;
    cursor: pointer;
    text-shadow: 3px 3px var(--react-dark);
    background-color: var(--tertiary-dark);
}
nav.crumbs > ul#crumb-list > li > a:visited {
    color: var(--text-primary);
}


nav.menu {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 2ch;
    transition: all .2s linear;
}
/* nav.menu:hover {
    background-color: var(--react-dark);
} */
nav.menu > button#burger-menu {
    /* position: relative; */
    /* background: url(../../common/image/bars.svg) center no-repeat;
    background-size: contain; */
    border: none;
    cursor: pointer;
    background-color: transparent;
}

nav.menu > button#burger-menu:hover > svg#burger-icon {
    fill: var(--react-dark);
}
nav.menu > button#burger-menu > svg#burger-icon {
    padding: 0;
    width: clamp(6ch, 3vw, 8ch);
    height: 100%;
    fill: var(--text-primary);
    transition: all .2s linear;
}
/* nav.menu > button#burger-menu > svg#burger-icon :hover {
    
} */
nav.menu > ul#menu-list {
    z-index: 110;
    display: none;
    flex-direction: column;
    align-items: space-between;
    justify-content: center;
    position: fixed;
    right: 0;
    top: 0;
    margin: 0;
    padding: 0;
    background-color: var(--tertiary-dark);
}
nav.menu > ul#menu-list > li {
    flex-grow: 1;
    font-size: larger;
    width: 100%;
}
nav.menu > ul#menu-list > li > a {
    display: block;
    font-family: var(--heading-family);
    font-style: inherit;
    font-size: 100%;
    text-decoration: none;
    font-weight: 900;
    color: inherit;
    padding: 1ch 2ch;
    transition: all .2s linear;
}
nav.menu > ul#menu-list > li > a:hover {
    color: var(--text-primary);
    background-color: var(--react-dark);
    animation: font-pulse 2s linear 0s infinite alternate both;
}
nav.menu > ul#menu-list > li > a:visited {
    color: var(--text-primary);
}


