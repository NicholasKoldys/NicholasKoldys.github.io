    display: flex;
    align-items: center;
    justify-content: center;
}
section#section-4 > article#resume > div#resume-contact > a {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2ex 4ch;
}
section#section-4 > article#resume > div#resume-contact > a > svg {
